@model Studizie.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@*<h2>@ViewBag.Title.</h2>*@
<h4 class="text-center register-header">Register</h4>

<div class="container d-flex justify-content-center">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-register", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger col-md-12" })

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-12 fName"})
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", onmouseenter = "smallText('fName')", onmouseleave = "bigText('fName')" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-12 lName" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", onmouseenter = "smallText('lName')", onmouseleave = "bigText('lName')" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-12 email" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", onmouseenter = "smallText('email')", onmouseleave = "bigText('email')"})
            </div>
        </div>
        //pasaword
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-10 col-10 pword"})
            <img src="~/Content/Images/Eye-Open.png" class="btn btn-password" />
            <div class="col-md-12">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control password", onmouseenter = "smallText('pword')", onmouseleave = "bigText('pword')"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 col-10 pwordC"})
            <img src="~/Content/Images/Eye-Open.png" class="btn  btn-passwordC">
            <div class="col-md-12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control password-confirm", onmouseenter = "smallText('pwordC')", onmouseleave = "bigText('pwordC')"})
            </div>
        </div>

        @*Area of interests section*@

        @Html.Label("Select Areas of Interest", new { @class = "col-md-12 mb-3" })

        <div class="form-group row mb-3">
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsEducation, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsEducation, new { @class = "custom-control-label" })
            </div>
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsSports, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsSports, new { @class = "custom-control-label" })
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsReligious, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsReligious, new { @class = "custom-control-label" })
            </div>
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsSkillAcquisition, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsSkillAcquisition, new { @class = "custom-control-label" })
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsEntrepreneurship, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsEntrepreneurship, new { @class = "custom-control-label" })
            </div>
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsGames, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsGames, new { @class = "custom-control-label" })
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsScience, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsScience, new { @class = "custom-control-label" })
            </div>
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsArts, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsArts, new { @class = "custom-control-label" })
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="custom-control custom-checkbox //custom-control-inline col-md-6">
                @Html.CheckBoxFor(m => m.IsTechnology, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.IsTechnology, new { @class = "custom-control-label" })
            </div>
        </div>

        <div class="form-group mt-5">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            // show or hide password
            $('.btn-password').click(function () {
                if ($('input').hasClass("password")) {
                    $('.password').attr("type", "text");
                    $(this).attr("src", "/Content/Images/Eye-Closed.png")
                    $('.password').addClass("show-password");
                    $('.password').removeClass("password");
                }
                else if ($('input').hasClass("show-password")) {
                    $('.show-password').attr("type", "password");
                    $(this).attr("src", "/Content/Images/Eye-Open.png")
                    $('.show-password').addClass("password");
                    $('.show-password').removeClass("show-password");
                }
            }),
                $('.btn-passwordC').click(function () {
                    if ($('input').hasClass("password-confirm")) {
                        $('.password-confirm').attr("type", "text");
                        $(this).attr("src", "/Content/Images/Eye-Closed.png")
                        $('.password-confirm').addClass("show-passwordC");
                        $('.password-confirm').removeClass("password-confirm");
                    }
                    else if ($('input').hasClass("show-passwordC")) {
                        $('.show-passwordC').attr("type", "password");
                        $(this).attr("src", "/Content/Images/Eye-Open.png")
                        $('.show-passwordC').addClass("password-confirm");
                        $('.show-passwordC').removeClass("show-passwordC");
                    }
                })
        });

        // Reduce the size of labels when mouse enters an input element
        function smallText(Name) {
            switch (Name) {
                case "fName":
                    $('.fName').css({ "font-size": "0.8rem", "transition": "font-size .3s" });
                    break;
                case "lName":
                    $('.lName').css({ "font-size": "0.8rem", "transition": "font-size .3s" });
                    break;
                case "email":
                    $('.email').css({ "font-size": "0.8rem", "transition": "font-size .3s" });
                    break;
                case "pword":
                    $('.pword').css({ "font-size": "0.8rem", "transition": "font-size .3s" });
                    break;
                case "pwordC":
                    $('.pwordC').css({ "font-size": "0.8rem", "transition": "font-size .3s" });
                    break;
            }
        }

        // Set the size of labels back to default when mouse enters an input element
        function bigText(Name) {
            switch (Name) {
                case "fName":
                    $('.fName').css({ "font-size": "1rem", "transition": "font-size .3s" });
                    break;
                case "lName":
                    $('.lName').css({ "font-size": "1rem", "transition": "font-size .3s" });
                    break;
                case "email":
                    $('.email').css({ "font-size": "1rem", "transition": "font-size .3s" });
                    break;
                case "pword":
                    $('.pword').css({ "font-size": "1rem", "transition": "font-size .3s" });
                    break;
                case "pwordC":
                    $('.pwordC').css({ "font-size": "1rem", "transition": "font-size .3s" });
                    break;
            }
        }

    </script>
}
